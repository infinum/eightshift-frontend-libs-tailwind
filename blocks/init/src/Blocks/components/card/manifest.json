{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs-tailwind/main/schemas/component.json",
	"componentName": "card",
	"title": "Card",
	"componentClass": "card-simple",
	"example": {
		"attributes": {
			"cardIntroContent": "This is intro",
			"cardAlign": "start"
		}
	},
	"attributes": {
		"cardAlign": {
			"type": "string",
			"default": "start"
		},

		"cardIntroSize": {
			"type": "string",
			"default": "sm"
		},
		"cardButtonVariant": {
			"type": "string",
			"default": "secondary"
		},
		"cardHeadingSize": {
			"type": "string",
			"default": "md"
		},
		"cardHeadingTag": {
			"type": "string",
			"default": "p"
		},
		"cardParagraphSize": {
			"type": "string",
			"default": "sm"
		},
		"cardButtonContent": {
			"type": "string",
			"default": "Read more"
		},
		"cardButtonColor": {
			"type": "string",
			"default": "gray-500"
		},
		"cardButtonSize": {
			"type": "string",
			"default": "sm"
		}
	},
	"options": {
		"cardAlign": [
			{
				"label": "Start",
				"value": "start",
				"icon": "textAlignLeft"
			},
			{
				"label": "Center",
				"value": "center",
				"icon": "textAlignCenter"
			},
			{
				"label": "End",
				"value": "end",
				"icon": "textAlignRight"
			}
		]
	},
	"components": {
		"image": "image",
		"intro": "paragraph",
		"heading": "heading",
		"paragraph": "paragraph",
		"button": "button"
	},
	"tailwind": {
		"base": {
			"twClasses": "w-full sm:max-w-80 rounded-2xl border bg-white shadow-md overflow-hidden"
		},
		"parts": {
			"image": {
				"twClasses": "w-full aspect-3/2"
			},
			"imagePicture": {
				"twClasses": "w-full !block border-b border-b-gray-200 bg-gray-100"
			},
			"content-container": {
				"twClasses": "p-4"
			},
			"intro": {
				"twClasses": "text-gray-400 italic"
			},
			"text": {
				"twClasses": "mt-2 text-gray-600"
			},
			"button": {
				"twClasses": "mt-3"
			}
		},
		"options": {
			"cardAlign": {
				"twClasses": {
					"start": "text-start",
					"center": "text-center",
					"end": "text-end"
				}
			}
		}
	}
}
