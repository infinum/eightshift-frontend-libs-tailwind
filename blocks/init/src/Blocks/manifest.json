{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs-tailwind/main/schemas/globalManifest.json",
	"namespace": "eightshift-boilerplate",
	"background": "#FFFFFF",
	"foreground": "#0F766E",
	"globalVariables": {
		"breakpoints": {
			"sm": 40,
			"md": 80,
			"lg": 90,
			"xl": 120
		},
		"breakpointData": {
			"sm": {
				"icon": "screenMobile",
				"label": "Mobile"
			},
			"md": {
				"icon": "screenTablet",
				"label": "Tablet"
			},
			"lg": {
				"icon": "screenDesktop",
				"label": "Desktop"
			},
			"xl": {
				"icon": "screenLarge",
				"label": "Large"
			}
		}
	}
}
