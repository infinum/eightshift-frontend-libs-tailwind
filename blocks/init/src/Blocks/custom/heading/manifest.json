{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs-tailwind/main/schemas/block.json",
	"blockName": "heading",
	"title": "Heading",
	"description" : "Establish a document structure by splitting it up into meaningful sections.",
	"category": "eightshift",
	"icon": {
		"src": "es-heading"
	},
	"keywords": [
		"heading",
		"title",
		"label"
	],
	"example": {
		"attributes": {
			"headingAlign": "start"
		}
	},
	"attributes": {
		"headingAlign": {
			"type": "string",
			"default": "start"
		},
		"headingColor": {
			"type": "string",
			"default": "black"
		}
	},
	"components": {
		"heading": "heading"
	},
	"options": {
		"headingAlign": [
			{
				"tooltip": "Start",
				"value": "start",
				"icon": "textAlignLeft"
			},
			{
				"tooltip": "Center",
				"value": "center",
				"icon": "textAlignCenter"
			},
			{
				"tooltip": "End",
				"value": "end",
				"icon": "textAlignRight"
			}
		],
		"headingColor": [
			"white",
			"black",
			"navy-500",
			"red-500",
			"red-50"
		]
	},
	"tailwind": {
		"options": {
			"headingAlign": {
				"twClasses": {
					"start": "text-start",
					"center": "text-center",
					"end": "text-end"
				}
			},
			"headingColor": {
				"twClasses": {
					"black": "text-gray-900 [&>a]:text-navy-900",
					"white": "text-gray-50 [&>a]:text-navy-900",
					"navy-500": "text-navy-500 [&>a]:text-navy-900",
					"red-500": "text-red-500 [&>a]:text-navy-900",
					"red-50": "text-red-50 [&>a]:text-red-300"
				}
			}
		}
	}
}
