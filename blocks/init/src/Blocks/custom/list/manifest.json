{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs-tailwind/main/schemas/block.json",
	"blockName": "list",
	"title": "List",
	"description" : "Add a basic list of items.",
	"category": "eightshift",
	"icon": {
		"src": "es-lists"
	},
	"keywords": [
		"list",
		"btn",
		"list"
	],
	"components": {
		"list": "list"
	},
	"attributes": {
		"listTextColor": {
			"type": "string",
			"default": "black"
		},
		"listMarkerColor": {
			"type": "string"
		}
	},
	"options": {
		"listColor": [
			"red-500",
			"navy-500",
			"gray-500",
			"black",
			"white"
		]
	},
	"tailwind": {
		"options": {
			"listMarkerColor": {
				"twClasses": {
					"red-500": "marker:text-red-500",
					"navy-500": "marker:text-navy-500",
					"gray-500": "marker:text-gray-500",
					"black": "marker:text-black",
					"white": "marker:text-white"
				}
			},
			"listTextColor": {
				"twClasses": {
					"red-500": "text-red-500",
					"navy-500": "text-navy-500",
					"gray-500": "text-gray-500",
					"black": "text-black",
					"white": "text-white"
				}
			}
		}
	}
}
