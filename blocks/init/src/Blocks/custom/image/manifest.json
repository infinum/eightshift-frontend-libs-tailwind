{
	"$schema": "https://raw.githubusercontent.com/infinum/eightshift-frontend-libs-tailwind/main/schemas/block.json",
	"blockName": "image",
	"title": "Image",
	"description" : "Worth a 1000 words.",
	"category": "eightshift",
	"icon": {
		"src": "es-image"
	},
	"keywords": [
		"image",
		"picture",
		"img"
	],
	"example": {
		"attributes": {
			"imageAlign": "center center"
		}
	},
	"attributes": {
		"imageAlign": {
			"type": "string",
			"default": "center center"
		},
		"wrapperDisabledOptions": {
			"type": "string",
			"default": "roundedCorners"
		}
	},
	"components": {
		"image": "image"
	},
	"tailwind": {
		"base": {
			"twClasses": "w-full"
		}
	}
}
